<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core">
        <Bar>
            <contentLeft>
                <Button icon="sap-icon://nav-back" press=".onNavBack" /> 
            </contentLeft>
            <contentMiddle>
                <FlexBox width="100%" justifyContent="Center">
                    <Text textAlign="Center" text="{i18n>homePageTitle}"  /> 
                </FlexBox>
            </contentMiddle>
            <contentRight> 
                <MenuButton
                    icon="sap-icon://account"
                    text="{impiegato>/matricola}">
                    <Menu>
                        <MenuItem 
                            text="Login"
                            press=".onLoginButtonClick"/>
                        <MenuItem 
                            text="Logout"
                            press=".onLoginButtonClick"/>
                    </Menu>
                </MenuButton>
            </contentRight>
        </Bar>
</core:FragmentDefinition>